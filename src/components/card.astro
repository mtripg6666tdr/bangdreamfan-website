---
interface Props {
  title: string;
  class: string;
}

const { title, class: className } = Astro.props;
---
<div class:list={["features", className]}>
  <h2>{title}</h2>
  <slot />
</div>

<style lang="scss">
  @use "../styles/default" as def;

  .features {
    grid-column: 2/-2;
    display: grid;
    grid-template-columns: repeat(10, 1fr);
    gap: 24px;
    background-color: def.$default_background;
    border-radius: 20px;
    padding: 2rem 30px;
    margin: 1rem 0;
    border: 1px solid rgba($color: white, $alpha: 0.12);

    @media all and (max-width: 900px) {
      padding: 2rem 10px;
      grid-column: 1/-1;
      margin: 0.2rem;
    }

    h2 {
      text-align: center;
      grid-column: 1/-1;
      margin: 0.9rem 0;
      font-size: 1.9rem;
    }
  }
</style>
